@model Mango.Web.Models.ProductDto

@{
    ViewData["Title"] = "ProductDelete";
}
 
<h3>Are you sure you want to delete this?</h3>
<div>
    
    
    <form asp-action="ProductDelete">
        
      
        
        <h1 class="text-primary">Delete Product</h1>
        <hr />
        <dl class="row">
        
            <input asp-for="ProductId" hidden />

            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class = "col-sm-10">
                <input asp-for="Name"  class="form-control" />
            </dd>

            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class = "col-sm-10">
                <input asp-for="Price"  class="form-control" />
            </dd>
            

            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class = "col-sm-10">
                <input asp-for="Description"  class="form-control" />
            </dd>
            

            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>
            <dd class = "col-sm-10">
                <input asp-for="CategoryName"  class="form-control" />
            </dd>
            

            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd class = "col-sm-10">
                <input asp-for="ImageUrl"  class="form-control" />
            </dd>
            

        </dl> 
        <div class="row" style="margin: 10px;">
            <div class="col-5">
                <a asp-action="ProductIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
        

    </form>
</div>
